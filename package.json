{
  "name": "boilerplate-monorepo",
  "description": "my description",
  "version": "0.0.0",
  "main": "main.js",
  "scripts": {
    "ng": "ng",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "start:boilerplate-monorepo": "ng serve boilerplate-monorepo",
    "start": "npm-run-all -p electron:serve start:boilerplate-monorepo",
    "electron:serve-tsc": "tsc -p tsconfig.serve.json",
    "electron:serve": "wait-on tcp:4200 && npm run electron:serve-tsc && npx electron . --serve",
    "postinstall": "electron-builder install-app-deps",
    "build": "npm run electron:serve-tsc && ng build boilerplate-monorepo --base-href ./",
    "build:prod": "npm run build -- -c production",
    "electron:package": "npm run build:prod && electron-builder --linux snap"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.2.0",
    "@angular/common": "~12.2.0",
    "@angular/compiler": "~12.2.0",
    "@angular/core": "~12.2.0",
    "@angular/forms": "~12.2.0",
    "@angular/platform-browser": "~12.2.0",
    "@angular/platform-browser-dynamic": "~12.2.0",
    "@angular/router": "~12.2.0",
    "@capacitor/android": "^3.3.3",
    "@capacitor/cli": "^3.3.3",
    "@capacitor/core": "^3.3.3",
    "@capacitor/ios": "^3.3.3",
    "electron-reload": "^2.0.0-alpha.1",
    "npm-run-all": "^4.1.5",
    "rxjs": "~6.6.0",
    "tslib": "^2.3.0",
    "wait-on": "^6.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.2.13",
    "@angular/cli": "~12.2.13",
    "@angular/compiler-cli": "~12.2.0",
    "@types/jasmine": "~3.8.0",
    "@types/node": "^12.11.1",
    "electron": "^16.0.4",
    "electron-builder": "^22.14.5",
    "jasmine-core": "~3.8.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "typescript": "~4.3.5"
  }
}
